<div class="section">
  <%= form_for(answer) do |f| %>
    <% if answer.errors.any? %>
      <div id="error_explanation">
        <h2>Errors</h2>
        <ul>
          <% answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :text %>
      <br>
      <%= f.text_field :text %>
    </div>

    <div class="field">
      <%= f.label :score %>
      <br>
      <%= f.number_field :score %>
    </div>

    <div class="actions">
      <%= f.submit %>
      <%= link_to 'Back', answers_path %>
    </div>
  <% end %>
</div>

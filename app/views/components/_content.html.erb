<div class="content">
  <div><%= content.text.html_safe %></div>

  <% if answers.present? && answers[0].length.positive? && content.next_id %>
    <div class="answers">
      <% content.answers.each_with_index do | ans, index | %>
        <% if ans.text? %>
          <div class="answer-container">
            <%= link_to ans, content_path(content.next_id, selected: index, answers: answers), class: "select-answer" %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% elsif content.next_id %>
    <%= link_to content.next, content_path(content.next_id) %>
  <% else %>
    <%= t(".end") %>
  <% end %>
</div>

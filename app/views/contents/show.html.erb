<div class="container">
  <h3><%= @content.key %></h3>

  <% if @selected.to_i >= 0 %>
    <%= render "answers", selected: @selected, answers: @previous.answers %>
  <% end %>

  <% if @content.present? %>
    <%= render "components/content", content: @content, options: @options %>
  <% elsif @content.next.present? %>
    <div class="actions">
      <%= link_to @content.next, content_path(@content.next) %>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <div class="actions">
      <%= link_to t("edit"), edit_content_path(@content), class: "left" %>
    </div>
  <% end %>
</div>

<div class="header">
  <h2><%= @content.section.titleize %></h2>
</div>

<div class="section content">
  <label><%= @content.category.titleize %>
  <%= @content.id %></label>
  <label><%= @content.key %></label>
  <span><%= @content.text %></span>
  <% if @content.category == "question" %>
    <label><%= t(".answer_one") %></label><span> <%= @content.relationships[0] %></span>
    <label><%= t(".answer_two") %></label><span> <%= @content.relationships[1] %></span>
    <label><%= t(".answer_three") %></label><span> <%= @content.relationships[2] %></span>
  <% else %>
    <label><%= t(".score") %></label><span> <%= @content.score %></span>
    <label><%= t(".next") %></label><span> <%= @content.to_content %></span>
  <% end %>
</div>

<div class="actions">
  <%= link_to t("edit"), edit_content_path(@content), class: "left" %>
  <%= link_to t("back"), contents_path, class: "right" %>
</div>
